{% extends 'layout.html.twig' %}

{% block content %}
    <div class="row">
        <h1 class="col-12">{{ beast.name }}</h1>
    </div>
    <div class="row">
        <div class="col-12">
            <a href="/beasts/{{ beast.id }}/edit" class="float-right">Edit</a>
        </div>
    </div>
    <div class="row detail">
        <figure class="col-12 col-md-4">
            <img src="{{ beast.picture }}" class="img-fluid"/>
        </figure>
        <div class="col-12 col-md-8">
            <p>Area : Beast's origin area</p>
            <p>Size : Beast's size m</p>
            <p>Planet : Beast's planet </p>
            <p>Movie(s) :Beast's movie</p>
        </div>
    </div>
    <a href="/beasts">Back</a>
{% endblock %}
