{% extends 'layout.html.twig' %}

{% block content %}
    <div class="row">
        <h1 class="col-12">All Beasts</h1>
    </div>
    <div class="row">
        <ul class="list">
            {% for beast in beasts %}
                <li><a href="/beasts/{{ beast.id }}">{{ beast.id }}. {{ beast.name }}</a></li>
            {% else %}
                <li>Nothing to display</li>
            {% endfor %}
        </ul>
    </div>
    <nav class="row">
        <a href="/beasts/add">Add a beast</a>
        <a href="/movies">Check the movies</a>
        <a href="/planets">Check the planets</a>
    </nav>
{% endblock %}
